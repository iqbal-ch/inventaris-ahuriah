{{!< layout }}
<div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Silahkan isi form berikut untuk melakukan keminjaman :</h4>
                      <form class="form-horizontal style-form" method="post" action="/simpan/peminjaman">

                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Pilih barang :</label>
                              <div class="col-sm-10">
                                  <select class="form-control" id="id_barang" name="id_barang">
                                    {{#each barangs}}  
                                        <option value="{{ id }}">{{ jenis_barang.nama }}</option>
                                    {{/each}}
						          </select>
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Nama peminjam:</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control" id="nama_peminjam" name="nama_peminjam">
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">No identitas peminjam:</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control" id="no_identitas_peminjam" name="no_identitas_peminjam">
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Alamat peminjam :</label>
                              <div class="col-sm-10">
                                  <textarea class="form-control" name="alamat_peminjam" id="alamat_peminjam" ></textarea>
                              </div>
                          </div> 

                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Keterangan :</label>
                              <div class="col-sm-10">
                                  <textarea class="form-control" name="untuk_keperluan" id="untuk_keperluan" ></textarea>
                              </div>
                          </div> 

                          <div class="form-group">
                              <div class="col-sm-12 ">
                                  <button type="submit" class="btn btn-primary pull-right">SAVE</button>
                              </div>
                          </div>
                          
                      </form>
                  </div>

