{{!< layout }}
<div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Silahkan updaate form berikut untuk mengupdate barang :</h4>
                      <form class="form-horizontal style-form" method="post" action="/update/barang?_method=put" >
                            <input type="hidden" name="id" value="{{barang.id}}">
                            {{!-- <input type="hidden" name="id_jenis_barang" value="{{barang.id_jenis_barang}}">
                            <input type="hidden" name="status" value="{{barang.status}}"> --}}
                            <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Update kondisi barang:</label>
                              <div class="col-sm-10">
                                  <select class="form-control" id="kondisi" name="kondisi"> 
                                        <option value="baik">baik</option>
                                        <option value="kurang baik">kurang baik</option>
                                        <option value="rusak">rusak</option>
						          </select>
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Update status barang:</label>
                              <div class="col-sm-10">
                                  <select class="form-control" id="status" name="status"> 
                                        <option value="ada">ada</option>
                                        <option value="tidak ada">tidak ada</option>
						          </select>
                              </div>
                          </div>
                          <div class="form-group">
                              <div class="col-sm-12 ">
                                  <button type="submit" class="btn btn-primary pull-right">UPDATE</button>
                              </div>
                          </div>
                          
                      </form>
                  </div>

