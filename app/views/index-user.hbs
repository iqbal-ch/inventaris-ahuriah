{{!< layout }}
    <div class="row mt">
                  <div class="col-md-12">
                      <div class="content-panel">
                          <h4><i class="fa fa-angle-right"></i>Tabel Pengguna</h4><hr><table class="table table-striped table-advance table-hover">
	                  	  	  
	                  	  	  
                              <thead>
                              <tr>
                                  <th> ID  </th>
                                  <th class="hidden-phone"> Nama </th>
                                  <th> Email </th>
                                  <th> Telepon </th>
                                  <th> status </th>
                                  <th> Terakhir masuk</th>
                                  <th> Aksi </th>
                              </tr>
                              </thead>
                              <tbody>
                            {{#each users}}
                              <tr>
                                  <td>{{ id }}</td>
                                  <td class="hidden-phone">{{ nama }}</td>
                                  <td>{{ email }}</td>
                                  <td>{{ no_telepon }} </td>
                                  <td><span class="label label-info label-mini">{{ role }}</span></td>
                                  <td> {{ last_login }}</td>
                                  <td>
                                      <a href="/detail/user/{{ id }}" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a>
                                      <a href="/ubah/user/{{ id }}"class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                      <a href="/hapus/user/{{ id }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                  </td>
                              </tr>
                            {{/each}}
                              </tbody>
                          </table>
                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->
              </div>
