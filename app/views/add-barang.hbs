{{!< layout }}
<div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Silahkan pilih barang yang akan ditambahkan barang :</h4>
                      <form class="form-horizontal style-form" method="post" action="/simpan/barang">
                
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Pilih barang :</label>
                              <div class="col-sm-10">
                                  <select class="form-control" id="jenis barang" name="jenis">
                                    {{#each jenisbarangs}}  
                                        <option value="{{ id }}">{{ nama }}</option>
                                    {{/each}}
						          </select>
                              </div>
                          </div>

                          <div class="form-group">
                              <div class="col-sm-12 ">
                                  <button type="submit" class="btn btn-primary pull-right">TAMBAHKAN</button>
                              </div>
                          </div>
                          
                      </form>
                  </div>

