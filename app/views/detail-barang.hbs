{{!< layout }}
<div class="row mt">
          		<div class="col-lg-12">
                  <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Detail barang id : {{ barang.id }}</h4>
                      <hr>
                      <form class="form-horizontal style-form">


                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">ID barang</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{barang.id}}</p>
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">Nama barang</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{barang.jenis_barang.nama}}</p>
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">Status</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{barang.status}}</p>
                              </div>
                          </div>
                           <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">Kategori</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{barang.jenis_barang.kategori}}</p>
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">Kondisi</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{barang.kondisi}}</p>
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">Deskripsi</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{ barang.jenis_barang.deskripsi}}</p>
                              </div>
                          </div>
                      </form>
                  </div>
          		</div><!-- col-lg-12-->      	
          	</div>