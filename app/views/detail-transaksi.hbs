{{!< layout }}
<div class="row mt">
          		<div class="col-lg-12">
                  <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Detail transaksi :</h4>
                      <hr>
                      <form class="form-horizontal style-form">

                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">ID transaksi</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{transaksi.id}}</p>
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">Id barang</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{transaksi.barang.id}}</p>
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">Nama peminjam</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{transaksi.nama_peminjam}}</p>
                              </div>
                          </div>
                           <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">No identitas</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{transaksi.no_identitas_peminjam}}</p>
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">Alamat peminjam</label>
                              <div class="col-lg-10">
                                  <p class="form-control-static">{{transaksi.alamat_peminjam}}</p>
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-lg-2 col-sm-2 control-label">Keterangan</label>
                              <div class="col-lg-12">
                                  <p class="form-control-static">{{transaksi.untuk_keperluan}}</p>
                              </div>
                          </div>

                          <div class="form-group">
                              <div class="col-sm-12 ">
                                  <a href="/kembalikan/{{ transaksi.id }}" class="btn btn-primary pull-right">kembalikan</a>
                              </div>
                          </div>
                      </form>
                  </div> 
          		</div><!-- col-lg-12-->      	
          	</div>