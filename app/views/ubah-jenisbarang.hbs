{{!< layout }}
<div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Silahkan updaate form berikut untuk mengupdate  jenis barang :</h4>
                    <br/> 
                      <div class="row centered">
                        <img src="/uploads/{{jenisbarang.image}}" class="img-circle" width="240">   
                      </div>   
                      <br/> 
                      <hr><hr>
                      <form class="form-horizontal style-form" method="post" action="/update/jenis-barang?_method=put" >
                            <input type="hidden" name="id" value="{{jenisbarang.id}}">
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Nama barang :</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control" id="nama" name="nama" value="{{jenisbarang.nama}}">
                              </div>
                          </div>
    
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Jumlah barang :</label>
                              <div class="col-sm-10">
                                  <input type="number" class="form-control" name="jumlah" id="jumlah"  min="0" value="{{jenisbarang.jumlah}}">
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Deskripsi :</label>
                              <div class="col-sm-10">
                                  <textarea class="form-control" name="deskripsi" id="deskripsi" >{{jenisbarang.deskripsi}}</textarea>
                              </div>
                          </div> 

                           <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">Status :</label>
                              <div class="col-sm-10">
                                  <textarea class="form-control" name="status" id="status" >{{jenisbarang.status}}</textarea>
                              </div>
                          </div> 

                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">kategori :</label>
                              <div class="col-sm-10">
                                  <input type="text" class="form-control" name="kategori" id="kategori" value="{{jenisbarang.kategori}}">
                              </div>
                          </div> 

                          <div class="form-group">
                              <div class="col-sm-12 ">
                                  <button type="submit" class="btn btn-primary pull-right">UPDATE</button>
                              </div>
                          </div>
                          
                      </form>
                  </div>

