    <meta name="author" content="">
    <link rel="icon" href="/favicon.ico">

    <title>Inventaris-Alhuriah</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/vendor/bootstrap.min.css" rel="stylesheet">
    
    
    <link href="/assets/css/style.css" rel="stylesheet">
    <link href="/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
  </head>

  <body>

    <div class="navbar navbar-inverse bg-inverse">
      <div class="container d-flex justify-content-between">
        <a href="/daftar/barang" class="navbar-brand">Inventaris-Alhuriah</a>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="btn btn-info" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>

    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">Inventaris-Alhuriah</h1>
        <p class="lead text-muted"> sistem inventaris berbasis web masjid alhuriah IPB</p>
       
          {{!-- <a href="#" class="btn btn-primary">Browse our collection</a> --}}
          <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#myModal">Tambah barang</button>
        </p>
      
    </section>

    <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Tambahkan barang</h4>
        </div>
        <div class="modal-body">

          <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-angle-right"></i> Silahkan pilih barang yang akan ditambahkan barang :</h4>
                      <form class="form-horizontal style-form" method="post" action="/simpan/barang">
                
                          <div class="form-group">
                              <label class="col-sm-12 col-sm-12 control-label">Pilih barang :</label>
                              <div class="col-sm-10">
                                  <select class="form-control" id="jenis barang" name="jenis">
                                    {{#each jenisbarangs}}  
                                        <option value="{{ id }}">{{ nama }}</option>
                                    {{/each}}
						                      </select>
                              </div>
                          </div>

                          <div class="form-group">
                              <div class="col-sm-12 ">
                                  <button type="submit" class="btn btn-primary pull-right">TAMBAHKAN</button>
                              </div>
                          </div>

                          <div class="form-group"></div>    
                          
                      </form>
                  </div>
        </div>
        {{!-- <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div> --}}
      </div>
      
    </div>
  </div>

    <div class="row mt ">
                  <div class="col-md-12">
                      <div class="content-panel">
                          <h4><i class="fa fa-angle-right"></i>Tabel barang</h4>
                          <hr>
                          <table class="table table-striped table-advance table-hover">
                              <thead>
                              <tr>
                                  <th> ID barang </th>
                                  <th> Nama barang </th>
                                  <th> Kondisi barang </th>
                                  <th> Status barang </th>
                                  <th> Kategori barang </th>
                                  <th> Aksi </th>
                              </tr>
                              </thead>
                              
                              <tbody>
                            {{#each barangs}}
                              <tr>
                                  <td>{{ id }}</td>
                                  <td>{{ jenis_barang.nama }}</td>
                                  <td>{{ kondisi }}</td>
                                  <td>{{ status }} </td>
                                  <td>{{ jenis_barang.kategori }}</td>
                                  <td>
                                      <a href="/lihat/barang/{{ id }}" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a>
                                      <a href="/edit/barang/{{ id }}"class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                      <a href="/hapus/barang/{{ id }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                  </td>
                              </tr>
                            {{/each}}
                              </tbody>
                          </table>
                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->
              </div>
    <br/><br/><br/>
    <footer class="text-muted">
      <div class="container">
        <p class="float-right">
          <a href="#">Back to top</a>
        </p>
        <p>&copy; 2017 Inventaris-Alhuriah . All right reserved.</p>
      </div>
    </footer>

