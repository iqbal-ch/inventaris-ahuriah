{{!< layout }}
    <div class="row mt">
                  <div class="col-md-12">
                      <div class="content-panel">
                          <h4><i class="fa fa-angle-right"></i>Laporan barang rusak</h4><hr><table class="table table-striped table-advance table-hover">
	                  	  	  
	                  	  	  
                              <thead>
                              <tr>
                                  <th> ID  </th>
                                  <th> Nama </th>
                                  <th> Kondisi </th>
                                  <th> Status </th>
                                  <th> Kategori </th>
                                  <th> Opsi </th>
                              </tr>
                              </thead>
                              <tbody>
                            {{#each barangs}}
                              <tr>
                                  <td>{{ id }}</td>
                                  <td>{{ jenis_barang.nama }}</td>
                                  <td>{{ kondisi }}</td>
                                  <td>{{ status }} </td>
                                  <td>{{ jenis_barang.kategori }}</td>
                                  <td>
                                      <a href="/detail/barang/{{ id }}" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a>
                                      <a href="/ubah/barang/{{ id }}"class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                                      <a href="/hapus/barang/{{ id }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                                  </td>
                              </tr>
                            {{/each}}
                              </tbody>
                          </table>
                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->
              </div>
